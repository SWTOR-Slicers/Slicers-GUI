{
  "name": "slicers-gui",
  "version": "1.0.0",
  "description": "A GUI for SWTOR Slicers",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": "https://github.com/Tormak9970/Slicers-GUI",
  "keywords": [
    "SWTOR",
    "GUI",
    "Extraction",
    "GR2"
  ],
  "author": "Tormak",
  "license": "CC0-1.0",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.55",
    "@electron-forge/maker-deb": "^6.0.0-beta.55",
    "@electron-forge/maker-rpm": "^6.0.0-beta.55",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.55",
    "@electron-forge/maker-zip": "^6.0.0-beta.55",
    "electron": "^12.0.5"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.3",
    "@petamoriken/float16": "^2.0.0",
    "electron-node-config": "^1.1.0",
    "electron-squirrel-startup": "^1.0.0",
    "node-datetime": "^2.1.2",
    "node-disk-info": "^1.3.0",
    "ssn": "git+https://github.com/Tormak9970/ssn.git",
    "three": "^0.128.0",
    "xml-js": "^1.6.11",
    "xml2js": "^0.4.23"
  },
  "build": {
    "appId": "com.swtor-slicers.tormak",
    "productName": "Slicers GUI",
    "extraResources": [
      "**/resources/**"
    ]
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "slicers_gui",
            "icon": "resources/img/SlicersLogo.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
